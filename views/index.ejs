<%- include("partials/header.ejs") %>


    <div class="container">
        <h1 class="my-2">Blog</h1>


        <section>

            <div class="row">
            <% posts.forEach((post) => { %> 
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="card-text"><%= post.description %></p>
                            <a href="/<%= post.slug %>" class="btn btn-success mt-auto">Read More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>


        </section>


        <a href="/create-post" class="btn btn-success my-5">+ Create New Post</a>
    </div>
    <%- include("partials/footer.ejs") %>